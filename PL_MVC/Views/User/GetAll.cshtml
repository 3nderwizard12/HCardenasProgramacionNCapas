
@model ML.User
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <section>
        <h2>Módulo</h2>
        
    </section>
    <section>
        <div style="float:left;">
            @Html.ActionLink("Agregar", "Form", "User", htmlAttributes: new { @class = "btn btn-success bi bi-person-plus-fill" })

        </div>
    </section>

    <section>
        @if (Model.Users == null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Message
            </div>
        }
        <table class="table table-bordered table-responsive">
            <thead>
                <tr>
                    <td class="text-center" style=" font-weight:bold;">Editar</td>

                    <td class="hidden">IdUser</td>
                    <td class="text-center" style="font-weight:bold;">Nombre</td>
                    <td class="text-center" style="font-weight:bold;">Apellido Paterno</td>
                    <td class="text-center" style="font-weight:bold;">Apellido Materno</td>
                    <td class="text-center" style="font-weight:bold;">Email</td>
                    <td class="text-center" style="font-weight:bold;">Password</td>
                    <td class="text-center" style="font-weight:bold;">Numero de telefono</td>
                    <td class="text-center" style="font-weight:bold;">Codigo Postal</td>
                    <td class="text-center" style="font-weight:bold;">Nombre de usuario</td>
                    <td class="text-center" style="font-weight:bold;">Fecha de Cumpleaños</td>
                    <td class="text-center" style="font-weight:bold;">Genero</td>
                    <td class="text-center" style="font-weight:bold;">Numero de celular</td>
                    <td class="text-center" style="font-weight:bold;">CURP</td>
                    <td class="text-center" style="font-weight:bold;">Imagen</td>
                    <td class="hidden">IdRole</td>
                    <td class="text-center" style="font-weight:bold;">Role</td>

                    <td class="text-center" style=" font-weight:bold;">Eliminar</td>
                </tr>
            </thead>
            <tbody>

                @foreach (ML.User user in Model.Users)
                {
                    <tr>
                        <td class="text-center"><a class="btn btn-warning bi bi-pencil-square" href="@Url.Action("Form", "User", new { IdUser = user.IdUser})"></a></td>
                        <td class="hidden">@user.IdUser</td>
                        <td class="text-center">@user.FirstName</td>
                        <td class="text-center">@user.LastName</td>
                        <td class="text-center">@user.MotherLastName</td>
                        <td class="text-center">@user.Email</td>
                        <td class="text-center">@user.Password</td>
                        <td class="text-center">@user.PhoneNumber</td>
                        <td class="text-center">@user.PotalCode</td>
                        <td class="text-center">@user.UserName</td>
                        <td class="text-center">@user.Birthday</td>
                        <td class="text-center">@user.Gender</td>
                        <td class="text-center">@user.MobileNumber</td>
                        <td class="text-center">@user.CURP</td>
                        <td class="text-center">@user.Image</td>
                        <td class="hidden">@user.Role.IdRole</td>
                        <td class="text-center">@user.Role.Name</td>
                        <td class="text-center"><a class="btn btn-danger bi bi-trash" href="@Url.Action("Delete", "User", new { IdUser = user.IdUser})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>
                    </tr>
                }
            </tbody>
        </table>

    </section>
</div>
